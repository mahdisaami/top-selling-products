upstream best_selling {
    server unix:/var/www/best_selling/best_selling.sock fail_timeout=0;
}

server {
    listen 8000;
    server_name localhost;

    client_max_body_size 4G;

    access_log /var/log/nginx/best-selling-access.log;
    error_log /var/log/nginx/best-selling-error.log;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://best_selling;
    }
}
